{
  "name": "dp-service",
  "version": "1.0.0",
  "description": "Deployment Prototype Service",
  "main": "dist/app.js",
  "author": "Michal Katanski",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node ./app/app.ts",
    "build": "tsc --project tsconfig.json",
    "run": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "reinstall": "rm -rf node_modules && yarn install --frozen-lockfile",
    "reinstall:cache": "rm -rf node_modules && yarn cache clean && yarn install --frozen-lockfile",
    "reinstall:regenerate-lock": "rm -rf node_modules && yarn cache clean && rm -rf yarn.lock && yarn install",
    "pretty": "prettier --write \"app/**/*.ts\"",
    "lint": "eslint --config ./.eslintrc --format table 'app/**/*.ts' && tsc --noEmit",
    "docker:start": "docker build -t dp-service . && docker run -td -p8080:8080 dp-service",
    "docker:stop": "docker rm $(docker stop $(docker ps -a -q --filter ancestor=dp-service --format=\"{{.ID}}\"))"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --bail --no-restage && yarn run lint",
      "pre-push": "yarn run lint && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "express": "^4.17.1",
    "typescript": "^3.9.6"
  }
}
